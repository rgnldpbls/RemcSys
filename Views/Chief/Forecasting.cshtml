@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const yearList = @Html.Raw(Json.Serialize(yearList));
        const projectCost = @Html.Raw(Json.Serialize(projectCost));
        const fundYear1 = @Html.Raw(Json.Serialize(fundYear1));
        const fundYear2 = @Html.Raw(Json.Serialize(fundYear2));

        document.addEventListener("DOMContentLoaded", function () {
            const ctx = document.getElementById('forecastChart').getContext('2d');
            const forecastChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: yearList,
                    datasets: [
                        {
                            label: 'Actual Funding',
                            data: projectCost,
                            borderColor: 'blue',
                            backgroundColor: 'rgba(0, 0, 255, 0.1)',
                            pointStyle: 'rectRot',
                            pointRadius: 5,
                            tension: 0.3
                        },
                        {
                            label: 'Forecasted Funding Year 1',
                            data: fundYear1,
                            borderColor: 'orange',
                            backgroundColor: 'rgba(255, 165, 0, 0.1)',
                            borderDash: [5, 5],
                            pointStyle: 'rectRot',
                            pointRadius: 5,
                            tension: 0.3,
                        },
                                {
                            label: 'Forecasted Funding Year 2',
                            data: fundYear2,
                            borderColor: 'green',
                            backgroundColor: 'rgba(0, 128, 0, 0.1)',
                            borderDash: [5, 5],
                            pointStyle: 'rectRot',
                            pointRadius: 5,
                            tension: 0.3
                        }
                    ]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Total University Funded Research Cost (PHP)'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Year'
                            }
                        }
                    }
                }
            });
        });

        document.getElementById('export').addEventListener('click', function(){
            const url = `/Chief/GenerateReports?reportType=ForecastedUFRFunds&startDate=null&endDate=null`;
            window.location.href = url;
        })
    </script>
