@{
    ViewData["Title"] = "Ethics Clearance";
    Layout = "_NavFaculty";
}

@if (!ViewBag.hasEthics)
{
    <div class="type-section">
        <div class="card">
            <span class="title">Have you already obtained an Ethics Clearance?</span>
            <div class="d-grid gap-3 col-14 mx-auto">
                <a href="@Url.Action("UploadEthicsClearance", "FundedResearchApplication", new {id = ViewBag.Id})" class="btn btn-success btn-lg"><b>Upload</b>, if YES</a>
                <a href="@Url.Action("UnderMaintenance", "Home")" class="btn btn-danger btn-lg"><b> Apply</b>, if NO</a>
            </div>
        </div>
    </div>
}
else if (ViewBag.hasEthics)
{
    <div class="type-section">
        <div class="card">
            <span class="title">You have already uploaded Ethics Clearance. Click the button below to check the status.</span>
            <div class="d-grid gap-3 col-14 mx-auto">
                <a href="@Url.Action("ApplicationStatus", "FundedResearchApplication", new {id = ViewBag.Id})" class="btn btn-primary btn-lg">Check Status</a>
            </div>
        </div>
    </div>
}