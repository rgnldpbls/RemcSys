@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f7f9fc;
            color: #333;
        }

        .message-container {
            text-align: center;
            padding: 40px;
            border: 2px solid #850000;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            animation: fadeIn 1.5s ease-in-out;
        }

        h1 {
            font-size: 2.5em;
            color: #850000;
            margin-bottom: 20px;
            animation: slideIn 1.5s ease-out;
        }

        p {
            font-size: 1.2em;
            color: #555;
            animation: fadeIn 3s ease-in-out;
        }

        .announcement {
            font-size: 1em;
            margin-top: 20px;
            color: #e74c3c;
            font-weight: bold;
            animation: pulse 2s infinite;
        }

        /* Return button styling */
        .btn-home {
            display: inline-block;
            padding: 12px 24px;
            font-size: 16px;
            font-weight: 500;
            color: #ffffff;
            background-color: #850000;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            .btn-home:hover {
                background-color: #850000;
            }
    </style>
</head>
<body>
    <div class="message-container">
        <h1>Externally Funded Research</h1>
        <h1>Application Closed</h1>
        <p>Thank you for your interest in applying. Currently, applications are closed.</p>
        <p class="announcement">Stay tuned for the announcement when it will reopen!</p>
        <a href="@Url.Action("TeamLeaderDashboard", "FundedResearchApplication")" class="btn-home">Return to Dashboard</a>
    </div>
</body>
</html>
