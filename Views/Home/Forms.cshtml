@model List<Document>
@{
    Layout = "_NavTeamLeader";
}
<div class="container">
    <!-- List of Documentary Requirements -->
    <div class="document-section">
        <h5>List of Documentary Requirements</h5><hr />
        <p>All documents are required to be submitted by all of the applicants.</p>
        <ul class="doc-list">
            @if (ViewBag.docu != null)
            {
                @foreach (var file in ViewBag.docu)
                {
                    <li>
                        <a class="btn" onclick="showDocument('@file.FilePath')">@file.FileName</a>
                    </li>
                }

            }
        </ul>
    </div>

    <!-- List of Executive Orders -->
    <div class="document-section">
        <h5>List of Executive Orders</h5><hr />
        <p>This document should be read if you’re applying Funded Research Work</p>
        <ul class="doc-list">
            @if (ViewBag.exec != null)
            {
                @foreach (var file in ViewBag.exec)
                {
                    <li>
                        <a class="btn" onclick="showDocument('@file.FilePath')">@file.FileName</a>
                    </li>
                }

            }
        </ul>
    </div>
</div>

<a class="proceed-btn" href="@Url.Action("AddFundedResearch", "FundedResearchApplication", new {type = ViewBag.Type as string})">Proceed</a>

<script type="text/javascript">
    function showDocument(filePath) {
        const newTab = window.open("/" + filePath, '_blank');
        newTab.focus();
    }
</script>
